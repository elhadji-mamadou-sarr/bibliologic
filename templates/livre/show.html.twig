{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}

<div class="container mt-5">

    <div class="d-flex justify-content-between">
        <h3>
            Detail du Livre {{ livre.titre}}
        </h3>

        <div class="row g-3">
            <div class="col-auto">
                <a class="btn btn-primary" href="{{ path('app_livre_index') }}">Retour</a>
            </div>
        </div>

    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.auteur }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ livre.genre }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ livre.langue }}</td>
            </tr>
            <tr>
                <th>Date_publication</th>
                <td>{{ livre.datePublication ? livre.datePublication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre_pages</th>
                <td>{{ livre.nombrePages }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ livre.localisation }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ livre.etat }}</td>
            </tr>
        </tbody>
    </table>

    
<div class="d-flex justify-content-between">    
    <a <a class="btn btn-primary" href="{{ path('app_livre_edit', {'id': livre.id}) }}">Modifier</a>

    {{ include('livre/_delete_form.html.twig') }}

   </div>    

{% endblock %}
