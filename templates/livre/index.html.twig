{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}



    <div class="container mt-5">

    <div class="d-flex justify-content-between">
        <h1>
            Liste des Livres
        </h1>

        <div class="row g-3">
            <div class="col-auto">
                <input type="text" name='search' class="form-control" placeholder="Rechercher un livre">
            </div>
            <div class="col-auto">
                <a href="{{ path('app_livre_new') }}" class="btn btn-primary mb-3"> + &nbsp; Ajouter</a>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Genre</th>
                <th>Langue</th>
                <th>Date de publication</th>
                <th>Nombre de pages</th>
                <th>Localisation</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{{ livre.genre }}</td>
                <td>{{ livre.langue }}</td>
                <td>{{ livre.datePublication ? livre.datePublication|date('Y-m-d') : '' }}</td>
                <td>{{ livre.nombrePages }}</td>
                <td>{{ livre.localisation }}</td>
                <td>{{ livre.etat }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_livre_show', {'id': livre.id}) }}">detail</a>
                    <a class="btn btn-primary" href="{{ path('app_livre_edit', {'id': livre.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    </div>



    <script>
        $(document).ready(function() {
            $('input[name="search"]').on('keyup', function() {
                let query = $(this).val();
                $.ajax({
                    url: "{{ path('app_livre_index') }}",
                    method: 'GET',
                    data: { search: query },
                    success: function(data) {
                        $('tbody').html(data);
                    }
                });
            });
        });
    </script>


{% endblock %}
