{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}


    <div class="container mt-5">
   
        <div class="card">

            <div class="card-header">

                <div class="d-flex justify-content-between">
                
                    <h3>Liste des categories </h3>
                    <div class="row g-3">
                        <div class="col-auto">
                            <input type="text" name='search' class="form-control" placeholder="Rechercher un livre">
                        </div>
                        <div class="col-auto">
                            <a href="{{ path('app_categorie_new') }}" class="btn btn-primary mb-3"> + &nbsp; Ajouter</a>
                        </div>
                    </div>

                </div>

            </div>

            <div class="card-body">
            
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td>{{ categorie.id }}</td>
                                <td>{{ categorie.nom }}</td>
                                <td>{{ categorie.description }}</td>
                                <td>
                                    <a  href="{{ path('app_categorie_show', {'id': categorie.id}) }}">show</a>
                                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun enrgistrement trouv√©</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>

        </div>

    </div>

    <a href="{{ path('app_categorie_new') }}">Create new</a>


{% endblock %}
