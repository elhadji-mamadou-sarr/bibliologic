{% extends 'base.html.twig' %}

{% block title %}Emprunteur index{% endblock %}

{% block body %}
    <h1>Emprunteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Date_inscription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunteur in emprunteurs %}
            <tr>
                <td>{{ emprunteur.id }}</td>
                <td>{{ emprunteur.nom }}</td>
                <td>{{ emprunteur.prenom }}</td>
                <td>{{ emprunteur.adresse }}</td>
                <td>{{ emprunteur.telephone }}</td>
                <td>{{ emprunteur.email }}</td>
                <td>{{ emprunteur.dateInscription ? emprunteur.dateInscription|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_emprunteur_show', {'id': emprunteur.id}) }}">show</a>
                    <a href="{{ path('app_emprunteur_edit', {'id': emprunteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_emprunteur_new') }}">Create new</a>
{% endblock %}
