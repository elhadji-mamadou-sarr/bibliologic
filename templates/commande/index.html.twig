{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
   
    <div class="container mt-5">
   
        <div class="card">

            <div class="card-header">

                <div class="d-flex justify-content-between">
                
                    <h3>Liste des commandes </h3>
                    <div class="row g-3">
                        <div class="col-auto">
                            <input type="text" name="search" id="searchLivre" class="form-control" placeholder="Rechercher une commande">
                        </div>
                        <div class="col-auto">
                            <a href="{{ path('app_commande_new') }}" class="btn btn-primary mb-3"> + &nbsp; Ajouter</a>
                        </div>
                    </div>

                </div>

            </div>

            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>NomClient</th>
                                <th>Adresse</th>
                                <th>AdresseFacture</th>
                                <th>CreatedAt</th>
                                <th>CreatedBy</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for commande in commandes %}
                            <tr>
                                <td>{{ commande.id }}</td>
                                <td>{{ commande.nomClient }}</td>
                                <td>{{ commande.adresse }}</td>
                                <td>{{ commande.adresseFacture }}</td>
                                <td>{{ commande.createdAt ? commande.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ commande.createdBy }}</td>
                                <td>
                                    <a class="btn btn-outline-warning btn-sm" href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a>
                                    <a class="btn btn-outline-primary btn-sm" href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>

        </div>


    </div>



{% endblock %}
